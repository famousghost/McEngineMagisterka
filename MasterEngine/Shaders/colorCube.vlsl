#version 330 core
layout(location = 0) in vec3 vertexCoords;
layout(location = 1) in vec3 colorValues;

out vec3 colors;

uniform mat4 model;
uniform mat4 view;
uniform mat4 projection;

void main()
{
	mat4 MVP = projection * view * model;
	gl_Position = MVP * vec4(vertexCoords, 1.0);
	colors = colorValues;
}